<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutCamera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/fragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/closeButton"
        android:layout_width="62dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:background="#00000000"
        android:drawableStart="@drawable/baseline_close_36"
        android:drawableTint="@color/colorLight"
        android:gravity="center"

        android:paddingStart="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/modelOptions"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonElmTree"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/ic_treeiconsmallmodelbg"
                android:text="Elm Tree"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/buttonPineTree"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonPineTree"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_treeiconlargemodelbg_focus"
                android:text="Pine Tree"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonThree"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/ic_treeiconsmallmodelbg"
                android:text="Third Option"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/buttonPineTree"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>