<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutCamera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <fragment
        android:id="@+id/fragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/black"
        android:gravity="center"
        android:padding="8dp"
        android:text="Distance from camera"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/closeButton"
        android:layout_width="62dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:background="#00000000"
        android:drawableStart="@drawable/baseline_close_36"
        android:drawableTint="@color/colorLight"
        android:gravity="center"

        android:paddingStart="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/fragment"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/containerConfigButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ar_background_curved_l"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/configButtonCam"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#00000000"
                    android:drawableStart="@drawable/baseline_settings_36"
                    android:drawableTint="@color/colorLight"

                    android:gravity="end"
                    android:paddingStart="14dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerCamOptions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ar_background_curved_l"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <SeekBar
                        android:id="@+id/seekBarTreeQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginStart="88dp"
                        android:layout_marginEnd="88dp"
                        android:layerType="software"
                        android:scaleX="2"
                        android:scaleY="2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_buttonwhitebg_greenstroke"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_weight="0.5"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/pinuspinaster" />

                    <Button
                        android:id="@+id/buttonPinusPinaster"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="128"
                        android:background="?android:attr/selectableItemBackground"
                        android:text="@string/pinus_pinaster"
                        android:textAllCaps="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_buttonwhitebg_greenstroke"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_weight="0.5"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/pinetree" />

                    <Button
                        android:id="@+id/buttonTree2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="128"
                        android:background="?android:attr/selectableItemBackground"
                        android:text="@string/tree_2"
                        android:textAllCaps="false" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/modelOptions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/buttonElmTree"
                        android:layout_width="105dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="25dp"
                        android:background="@drawable/ic_treeiconsmallmodelbg"
                        android:text="Elm Tree"
                        android:textColor="#000000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/buttonPineTree"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/buttonPineTree"
                        android:layout_width="105dp"
                        android:layout_height="100dp"
                        android:background="@drawable/ic_treeiconlargemodelbg_focus"
                        android:text="@string/pinus_pinaster"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/buttonThree"
                        android:layout_width="105dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/ic_treeiconsmallmodelbg"
                        android:text="Third Option"
                        android:textColor="#000000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/buttonPineTree"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>